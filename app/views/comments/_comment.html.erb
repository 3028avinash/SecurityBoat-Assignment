<style>
  #<%= dom_id(comment) %> {
    margin: 5rem; /* Set left and right margin to "auto" */
    margin-left: 15rem; /* Set left and right margin to "auto" */
    max-width: 300px; /* Set a maximum width to control the centering width */
    text-align: left; /* Align the text inside the centered div */
  }
</style>



<div class="d-flex">
<div id="<%= dom_id comment %>">
  <p>
    <strong>Content:</strong>
    <%= comment.content %>
  </p>

  <p>
    <strong>Task:</strong>
    <%= comment.task_id %>
  </p>

  <p>
    <%# <strong>Completed:</strong> %>
    <%#= comment.completed %>
  </p>

  <p>
    <strong>User:</strong>
    <%= comment.user_id %>
  </p>

</div>

<div id="<%= dom_id comment %>">
  <p>
    <strong>Task Id:</strong>
    <%= comment.task_id %>
  </p>
  <p>
    <strong> Title:</strong>
    <%= comment.task.title %>
  </p>
  <p>
    <strong> Description:</strong>
    <%= comment.task.description %>
  </p>

  

</div>
</div>
