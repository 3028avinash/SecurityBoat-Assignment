<p style="color: green"><%= notice %></p>
<div class="d-flex justify-content-between m-2", style="text-align: center;">
  <h1>Comment Detail</h1>
  <h1>Commented on Task</h1>
</div>
<%= render @comment %>

<div>
  <%= link_to "Edit this comment", edit_comment_path(@comment), class: 'btn btn-primary' %> |
  <%= link_to "Back to comments", comments_path, class: 'btn btn-primary' %>

  <%= button_to "Destroy this comment", @comment, method: :delete, class: 'btn btn-primary m-1', data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
</div>
